                            DisplayMemberPath="Key"
                            ItemsSource="{Binding BuffIcons}"
                            SelectedIndex="{Binding BuffIconTwelve}"
                            SelectedValuePath="Value"
                            Style="{StaticResource ComboBoxStyle}" />
                    </StackPanel>

                </UniformGrid>

            </Grid>

            <UniformGrid Columns="1" Rows="2">
                <StackPanel>
                    <Label Content="Icon Preview" Style="{StaticResource LabelHeaderStyle}" />

                    <Border
                        Height="200"
                        Margin="5"
                        BorderThickness="4,4,4,2"
                        CornerRadius="1,1,1,1">
                        <Border.BorderBrush>
                            <SolidColorBrush Opacity="0.5" Color="DarkRed" />
                        </Border.BorderBrush>

                        <UniformGrid Columns="6" Rows="2">

                            <Border Margin="5" BorderThickness="1,1,1,1">
                                <Border.BorderBrush>
                                    <DrawingBrush
                                        TileMode="Tile"
                                        Viewport="0,0,8,8"
                                        ViewportUnits="Absolute">
                                        <DrawingBrush.Drawing>
                                            <DrawingGroup>
                                                <GeometryDrawing Brush="White">
                                                    <GeometryDrawing.Geometry>
                                                        <GeometryGroup>
                                                            <RectangleGeometry Rect="0,0,50,50" />
                                                            <RectangleGeometry Rect="50,50,50,50" />
                                                        </GeometryGroup>
                                                    </GeometryDrawing.Geometry>
                                                </GeometryDrawing>
                                            </DrawingGroup>
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                </Border.BorderBrush>

                                <Image Source="{Binding BuffIconImageSeven}" />
                            </Border>
                            <Border Margin="5" BorderThickness="1,1,1,1">
                                <Border.BorderBrush>
                                    <DrawingBrush
                                        TileMode="Tile"
                                        Viewport="0,0,8,8"
                                        ViewportUnits="Absolute">
                                        <DrawingBrush.Drawing>
                                            <DrawingGroup>
                                                <GeometryDrawing Brush="White">
