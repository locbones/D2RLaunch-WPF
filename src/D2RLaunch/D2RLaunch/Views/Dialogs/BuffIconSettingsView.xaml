                                                            <RectangleGeometry Rect="50,50,50,50" />
                                                        </GeometryGroup>
                                                    </GeometryDrawing.Geometry>
                                                </GeometryDrawing>
                                            </DrawingGroup>
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                </Border.BorderBrush>

                                <Image Source="{Binding BuffIconImageNine}" />
                            </Border>
                            <Border Margin="5" BorderThickness="1,1,1,1">
                                <Border.BorderBrush>
                                    <DrawingBrush
                                        TileMode="Tile"
