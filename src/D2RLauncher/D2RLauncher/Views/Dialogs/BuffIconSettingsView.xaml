<UserControl
    x:Class="D2RLauncher.Views.Dialogs.BuffIconSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:D2RLauncher.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:cm="http://caliburnmicro.com"
    Width="990"
    Height="750"
    d:DataContext="{d:DesignInstance Type=local:BuffIconSettingsViewModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Content="Buff Icon Manager"
            Style="{StaticResource LabelHeaderStyle}" />

        <Image Margin="5" Grid.Row="1" Source="pack://application:,,,/Resources/BuffIcons/Images/BuffIconPreview.png" />

        <UniformGrid Grid.Row="2" Columns="2" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0">
                    <Label
                        Content="My Templates"
                        Foreground="CornflowerBlue"
                        Style="{StaticResource LabelHeaderStyle}" />
                    <ComboBox
                        Width="125"
                        Height="40"
                        DisplayMemberPath="Key"
                        ItemsSource="{Binding MyTemplates}"
                        SelectedIndex="{Binding SelectedTemplate}"
                        SelectedValuePath="Value"
                        Style="{StaticResource ComboBoxStyle}" />
                </StackPanel>
                <Label
                    Grid.Row="1"
                    Content="Save Custom Template"
                    Foreground="CornflowerBlue"
                    Style="{StaticResource LabelHeaderStyle}" />

                <UniformGrid Grid.Row="3" Columns="2">

                    <TextBox Text="{Binding SelectedTemplate.CharacterName}"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button
                            Width="75"
                            cm:Message.Attach="[Event Click] = [Action OnSave];"
                            Background="#0d2905"
                            Content="Save"
                            Style="{StaticResource ButtonStyle}" />
                        <Button
                            Width="75"
                            cm:Message.Attach="[Event Click] = [Action OnDelete];"
                            Background="#200708"
                            Content="Delete"
                            Style="{StaticResource ButtonStyle}" />
                    </StackPanel>

                    <StackPanel>
                        <Label Content="Icon 1" Style="{StaticResource LabelHeaderStyle}"></Label>
                        <ComboBox
                            DisplayMemberPath="Key"
                            ItemsSource="{Binding BuffIcons}"
                            SelectedIndex="{Binding BuffIconOne}"
                            SelectedValuePath="Value"
                            Style="{StaticResource ComboBoxStyle}" />
                    </StackPanel>

                    <StackPanel>
                        <Label Content="Icon 7" Style="{StaticResource LabelHeaderStyle}"></Label>
                        <ComboBox
                            DisplayMemberPath="Key"
                            ItemsSource="{Binding BuffIcons}"
                            SelectedIndex="{Binding BuffIconSeven}"
                            SelectedValuePath="Value"
                            Style="{StaticResource ComboBoxStyle}" />
                    </StackPanel>

                    <StackPanel>
                        <Label Content="Icon 2" Style="{StaticResource LabelHeaderStyle}"></Label>
                        <ComboBox
                            DisplayMemberPath="Key"
                            ItemsSource="{Binding BuffIcons}"
                            SelectedIndex="{Binding BuffIconTwo}"
                            SelectedValuePath="Value"
                            Style="{StaticResource ComboBoxStyle}" />
                    </StackPanel>

                    <StackPanel>
                        <Label Content="Icon 8" Style="{StaticResource LabelHeaderStyle}"></Label>
                        <ComboBox
                            DisplayMemberPath="Key"
                            ItemsSource="{Binding BuffIcons}"
                            SelectedIndex="{Binding BuffIconEight}"
                            SelectedValuePath="Value"
                            Style="{StaticResource ComboBoxStyle}" />
                    </StackPanel>

                    <StackPanel>
                        <Label Content="Icon 3" Style="{StaticResource LabelHeaderStyle}"></Label>
                        <ComboBox
                            DisplayMemberPath="Key"
                            ItemsSource="{Binding BuffIcons}"
                            SelectedIndex="{Binding BuffIconThree}"
                            SelectedValuePath="Value"
                            Style="{StaticResource ComboBoxStyle}" />
                    </StackPanel>

                    <StackPanel>
                        <Label Content="Icon 9" Style="{StaticResource LabelHeaderStyle}"></Label>
                        <ComboBox
                            DisplayMemberPath="Key"
                            ItemsSource="{Binding BuffIcons}"
