                            </Border>
                            <Border BorderThickness="1,1,1,1" Margin="5">
                                <Border.BorderBrush>
                                    <DrawingBrush Viewport="0,0,8,8" ViewportUnits="Absolute" TileMode="Tile">
                                        <DrawingBrush.Drawing>
                                            <DrawingGroup>
                                                <GeometryDrawing Brush="White">
                                                    <GeometryDrawing.Geometry>
                                                        <GeometryGroup>
                                                            <RectangleGeometry Rect="0,0,50,50" />
                                                            <RectangleGeometry Rect="50,50,50,50" />
                                                        </GeometryGroup>
                                                    </GeometryDrawing.Geometry>
                                                </GeometryDrawing>
                                            </DrawingGroup>
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                </Border.BorderBrush>

                                <Image Source="{Binding BuffIconSix}"/>
                            </Border>

                        </UniformGrid>

                    </Border>
                </StackPanel>

                <TextBlock Margin="5" FontSize="16" Foreground="Firebrick" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="This feature is functional, but still in development. I will do my best to support custom mods with new skills in the future. It is not currently possible to add timers in softcode.">

                </TextBlock>
            </UniformGrid>
        </UniformGrid>

    </Grid>
</UserControl>
